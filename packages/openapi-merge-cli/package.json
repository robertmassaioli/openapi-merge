{
  "name": "openapi-merge-cli",
  "version": "1.1.29",
  "description": "A cli tool for the openapi-merge library.",
  "keywords": [
    "openapi",
    "merge",
    "cli"
  ],
  "main": "dist/index",
  "bin": {
    "openapi-merge-cli": "dist/cli.js"
  },
  "files": [
    "dist/!(__tests__)",
    "dist/!(__tests__)/**/*"
  ],
  "author": "Robert Massaioli",
  "license": "MIT",
  "private": false,
  "homepage": "https://github.com/robertmassaioli/openapi-merge",
  "repository": {
    "type": "git",
    "url": "git@github.com:robertmassaioli/openapi-merge.git"
  },
  "bugs": {
    "url": "https://github.com/robertmassaioli/openapi-merge/issues"
  },
  "devDependencies": {
    "@adobe/jsonschema2md": "^4.1.3",
    "@types/isomorphic-fetch": "^0.0.35",
    "@types/js-yaml": "^3.12.5",
    "@types/node": "^13.13.5",
    "@typescript-eslint/eslint-plugin": "2.31.0",
    "@typescript-eslint/parser": "2.31.0",
    "eslint": "^7.0.0",
    "husky": "^4.2.5",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3",
    "typescript-json-schema": "^0.42.0"
  },
  "dependencies": {
    "ajv": "^6.12.2",
    "commander": "^5.1.0",
    "es6-promise": "^4.2.8",
    "isomorphic-fetch": "^2.2.1",
    "js-yaml": "^3.14.0",
    "openapi-merge": "^1.0.22"
  },
  "scripts": {
    "build": "tsc --project .",
    "prepare": "npm run gen-schema && tsc --project .",
    "prepublishOnly": "npm run gen-schema && tsc --project .",
    "gen-schema": "typescript-json-schema src/data.ts Configuration --titles --refs --noExtraProps --required --strictNullChecks -o src/configuration.schema.json && ts-node --project tsconfig.json ./src/fix-schema.ts",
    "start": "ts-node --project ./tsconfig.json ./src/cli.ts",
    "lint": "yarn eslint src --ext .js,.jsx,.ts,.tsx --fix --format=visualstudio",
    "gen-docs": "jsonschema2md --input=src"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}
