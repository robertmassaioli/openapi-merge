            "type": "object",
            "additionalProperties": false,
            "title": "includePaths",
            "properties": {
              "path": {
                "description": "path to ignore",
                "title": "path",
                "type": "string"
              },
              "method": {
                "description": "method to ignore",
                "title": "path",
                "type": "string"
              }
            }
          },
          "title": "includePaths",
          "type": "array"
        },
        "excludePaths": {
          "description": "Only Operations that have these paths will be taken from this OpenAPI file. If a single Operation contains\nan includePaths and an excludePaths then it will be excluded; exclusion takes precedence.",
